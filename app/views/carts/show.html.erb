<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p> 
<% end %>

<%# if !!current_user %>
<% if current_cart %>
  <% current_cart.line_items.each do |line_item| %>
    <%= link_to line_item.item.title, item_path(line_item.item) %> | 
    <%= number_to_currency(line_item.item.price) %> | Quantity: <%= line_item.quantity %><br>
   <% end %>
<% end %>  

  <p>Order total: <strong><%= number_to_currency(current_cart.total) %></strong></p>

<% if current_cart.status != "submitted" %>
<form class="button_to" method="get" action="<%= store_path %>">
    <input type="submit" value="Keep Shopping">
 </form> 
<% else %>
  <h3>Your cart has been submitted.</h3> 
<% end %>
 
<% if current_cart.status == "not submitted" %>
  <%= button_to 'Checkout', cart_path(current_cart) %>
<% end %> 
