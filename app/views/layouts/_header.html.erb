
---------------------------------------------------------------------------------------
<h4>House keeping variables: </h4>
<% if current_user %>
  <strong>current_user:</strong> <%= current_user.email %>
<% end %>
<br>

<% if current_cart %>
 <strong>current_user.current_cart: </strong>
  <%= "#{current_cart.user.email}" %> 
  <strong>cart_id:</strong> <%= "#{current_cart.user_id}" %><br>
  <strong>cart status:</strong> <%= current_cart.status.upcase %>
<% else %>
  Cart has no contents
<% end %>
<br>

<strong>@user:</strong>
<% if @user %>
  @user: <%= @user.email %>
<% else %>
@user not defined
<% end %>
<br>
---------------------------------------------------------------------------------------

<nav class="">
<%= link_to "Store Home", store_path %> | 

<% if logged_in? && current_user %>
  <%= "Signed in as #{current_user.email}" %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %> |
<% end %>

<% if !current_user %>
  <%= link_to "Sign up", new_user_registration_path %> |
<% end %>

<% if !logged_in? %>
   <%= link_to "sign in", new_user_session_path %> |
<% end %>

<% if current_cart %>
  <%= link_to "Cart", checkout_path(current_cart) %>
<% end %>
  
<%= link_to "Admin", admin_path %>
</nav>